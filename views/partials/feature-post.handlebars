<article class="columns featured">
    <div class="column is-7 post-img ">
        <img src="https://cdn.emk.dev/templates/featured-image.png" alt="">
    </div>
    <div class="column is-5 featured-content va">
        <div>
            <h3 class="heading post-category">LATEST POST</h3>
            {{!-- shows latest post --}}
            {{#each posts}}
            {{#if @first}}
            <h1 class="title post-title">{{title}}</h1>
            <p class="post-excerpt">{{post_text}}</p>
            <br>
            <a href="/api/posts/{{id}}" class="button is-primary">Read More</a>
            {{/if}}
            {{/each}}
        </div>

    </div>
</article>